# CowCow Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://cowcow_user:cowcow_password@localhost:5432/cowcow

# For development with Docker Compose (uses the postgres service)
# DATABASE_URL=postgresql://cowcow_user:cowcow_password@postgres:5432/cowcow

# ======================
# JWT Configuration
# ======================
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: openssl rand -hex 32
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ======================
# Cloudflare R2 Storage Configuration
# ======================
# Get these from your Cloudflare R2 dashboard
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET=cowcow-recordings

# ======================
# Alternative S3 Configuration
# ======================
# For AWS S3 or other S3-compatible storage
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=cowcow-recordings
# S3_REGION=us-east-1

# ======================
# MinIO Configuration (Development Only)
# ======================
# For local development with MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://localhost:6379/0

# For development with Docker Compose (uses the redis service)
# REDIS_URL=redis://redis:6379/0

# ======================
# Server Configuration
# ======================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Set to true for development
# DEBUG=true

# ======================
# Upload Configuration
# ======================
UPLOAD_DIR=/tmp/cowcow_uploads
MAX_UPLOAD_SIZE=100000000  # 100MB in bytes
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,flac

# ======================
# Token Rewards Configuration
# ======================
TOKENS_PER_MINUTE=10
MIN_RECORDING_LENGTH=1
BONUS_HIGH_SNR=2
BONUS_LOW_CLIPPING=1
BONUS_GOOD_VAD=1

# ======================
# Quality Control Thresholds
# ======================
DEFAULT_MIN_SNR_DB=20.0
DEFAULT_MAX_CLIPPING_PCT=1.0
DEFAULT_MIN_VAD_RATIO=80.0

# ======================
# Email Configuration (Optional)
# ======================
# For user verification and notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# ======================
# Monitoring & Analytics (Optional)
# ======================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ANALYTICS_ENABLED=false
# PROMETHEUS_ENABLED=false

# ======================
# Security Configuration
# ======================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ======================
# Development Configuration
# ======================
# Set to true to enable development features
DEV_MODE=false

# Auto-reload server on code changes (development only)
AUTO_RELOAD=false

# Enable SQL query logging (development only)
LOG_SQL_QUERIES=false